<Page x:Class="Pong.Views.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pong.Views"
      mc:Ignorable="d" 
      Title="SingleplayerPage" Width="550" Height="388">

    <Grid HorizontalAlignment="Center">
        <Label x:Name="label" Content="Pong" HorizontalAlignment="Center" Margin="212,10,212,304" VerticalAlignment="Center" Foreground="White" FontSize="48" FontWeight="Bold"/>
        <Button x:Name="button" Content="Play" Margin="231,133,231,224" Width="88" BorderThickness="2" Foreground="White" BorderBrush="#FFF9F8F8" Background="Black" Click="button_Click" Height="31" Style="{StaticResource PongButton}"/>
    </Grid>
</Page>
